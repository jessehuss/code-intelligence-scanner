{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information",
      "Cataloger.Scanner": "Debug"
    }
  },
  "KnowledgeBase": {
    "ConnectionString": "mongodb://localhost:27017/catalog_kb_test",
    "DatabaseName": "catalog_kb_test",
    "AtlasSearch": {
      "Enabled": false,
      "IndexPrefix": "kb_search_test",
      "MaxResults": 50,
      "DefaultLimit": 25
    }
  },
  "MongoSampling": {
    "Enabled": true,
    "MaxDocumentsPerCollection": 100,
    "MaxCollections": 10,
    "TimeoutSeconds": 60,
    "UseReadOnlyCredentials": false,
    "ConnectionPoolSize": 2
  },
  "Scanning": {
    "MaxConcurrentRepositories": 1,
    "MaxConcurrentFiles": 5,
    "IncludedExtensions": [".cs", ".csproj", ".sln"],
    "ExcludedDirectories": ["bin", "obj", "node_modules", ".git", ".vs"],
    "MaxFileSizeMB": 2,
    "EnableIncrementalScanning": false,
    "EnableIntegrityChecks": false,
    "IntegrityCheckIntervalDays": 1
  },
  "PIIRedaction": {
    "Enabled": true,
    "PIIFieldNames": [
      "email", "phone", "ssn", "token", "key", "address", "name", "ip", "jwt", "credit"
    ],
    "PIIValuePatterns": [
      "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}\\b",
      "\\b\\d{3}[-.\\s]?\\d{3}[-.\\s]?\\d{4}\\b"
    ],
    "RedactionValue": "[REDACTED]",
    "PreserveDataTypes": true
  },
  "Performance": {
    "Enabled": true,
    "MonitoringIntervalSeconds": 10,
    "MaxMemoryUsageMB": 512,
    "MaxCpuUsagePercent": 50,
    "EnableDetailedMetrics": true,
    "MetricsRetentionDays": 1
  },
  "Logging": {
    "LogLevel": "Debug",
    "EnableStructuredLogging": true,
    "EnableConsoleLogging": true,
    "EnableFileLogging": false,
    "FileLoggingPath": "logs/scanner-test.log",
    "MaxLogFileSizeMB": 10,
    "MaxLogFiles": 3,
    "EnableExternalLogging": false
  }
}
