{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Cataloger.Scanner": "Information"
    }
  },
  "KnowledgeBase": {
    "ConnectionString": "mongodb://mongodb-staging:27017/catalog_kb",
    "DatabaseName": "catalog_kb_staging",
    "AtlasSearch": {
      "Enabled": true,
      "IndexPrefix": "kb_search_staging",
      "MaxResults": 100,
      "DefaultLimit": 50
    }
  },
  "MongoSampling": {
    "Enabled": true,
    "MaxDocumentsPerCollection": 500,
    "MaxCollections": 50,
    "TimeoutSeconds": 180,
    "UseReadOnlyCredentials": true,
    "ConnectionPoolSize": 5
  },
  "Scanning": {
    "MaxConcurrentRepositories": 2,
    "MaxConcurrentFiles": 10,
    "IncludedExtensions": [".cs", ".csproj", ".sln"],
    "ExcludedDirectories": ["bin", "obj", "node_modules", ".git", ".vs"],
    "MaxFileSizeMB": 5,
    "EnableIncrementalScanning": true,
    "EnableIntegrityChecks": true,
    "IntegrityCheckIntervalDays": 3
  },
  "PIIRedaction": {
    "Enabled": true,
    "PIIFieldNames": [
      "email", "phone", "ssn", "token", "key", "address", "name", "ip", "jwt", "credit",
      "password", "secret", "private", "personal", "sensitive", "confidential"
    ],
    "PIIValuePatterns": [
      "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}\\b",
      "\\b\\d{3}[-.\\s]?\\d{3}[-.\\s]?\\d{4}\\b",
      "\\b\\d{3}-\\d{2}-\\d{4}\\b"
    ],
    "RedactionValue": "[REDACTED]",
    "PreserveDataTypes": true
  },
  "Performance": {
    "Enabled": true,
    "MonitoringIntervalSeconds": 30,
    "MaxMemoryUsageMB": 1024,
    "MaxCpuUsagePercent": 70,
    "EnableDetailedMetrics": true,
    "MetricsRetentionDays": 14
  },
  "Logging": {
    "LogLevel": "Information",
    "EnableStructuredLogging": true,
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "FileLoggingPath": "/var/log/scanner/scanner-staging.log",
    "MaxLogFileSizeMB": 50,
    "MaxLogFiles": 5,
    "EnableExternalLogging": false
  }
}
